<config>
	<modules>
		<Codnitive_Productfilter>
			<version>1.03</version>
		</Codnitive_Productfilter>
	</modules>

	<global>
		<models>
			<codnitive_productfilter>
				<class>Codnitive_Productfilter_Model</class>
			</codnitive_productfilter>
		</models>

		<helpers>
			<codnitive_productfilter>
				<class>Codnitive_Productfilter_Helper</class>
			</codnitive_productfilter>
		</helpers>

		<blocks>
			<codnitive_productfilter>
				<class>Codnitive_Productfilter_Block</class>
			</codnitive_productfilter>
			<adminhtml>
				<rewrite>
					<catalog_product_grid>Codnitive_Productfilter_Block_Adminhtml_Catalog_Product_Grid</catalog_product_grid>
				</rewrite>
			</adminhtml>
		</blocks>
	</global>
</config>
